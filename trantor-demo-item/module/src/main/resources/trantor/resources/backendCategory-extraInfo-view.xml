<View title="后台类目额外信息">
    <Record key="category" model="item_BackendCategory" />
    <Tabs>
        <Tab title="类目属性">
            <Table key="table" model="item_Attribute" related="backendCategories:category" :advanced="false">
                <Fields>
                    <Field name="id" label="属性ID"/>
                    <Field name="key" label="属性名"/>
                </Fields>
                <RecordActions>
                    <Action label="查看" action="item_Attribute_toDetail" />
                    <Action label="编辑" action="item_Attribute_toEdit" />
                    <Action label="取消关联" />
                </RecordActions>
            </Table>
        </Tab>
        <Tab title="税率">
            <Form model="item_CategoryExtra" related="backendCategory:category">
                <Fields>
                    <Field name="backendCategory" :readonly="true" />
                    <Field name="rateCode"/>
                    <Field name="rate"/>
                </Fields>
                <Actions>
                    <Action type="Submit" :show="this.record.id == null" action="item_CategoryExtra_create"/>
                    <Action type="Submit" :show="this.record.id != null" action="item_CategoryExtra_update"/>
                </Actions>
            </Form>
        </Tab>
        <Tab title="售后服务">
            <Form model="item_CategoryExtra" related="backendCategory:category">
                <Fields>
                    <Field name="backendCategory" :readonly="true" />
                    <Field name="serviceTitle"/>
                    <Field name="serviceContent"/>
                </Fields>
                <Actions>
                    <Action type="Submit" :show="this.record.id == null" action="item_CategoryExtra_create"/>
                    <Action type="Submit" :show="this.record.id != null" action="item_CategoryExtra_update"/>
                </Actions>
            </Form>
        </Tab>
    </Tabs>
</View>
