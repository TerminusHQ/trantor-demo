<View title="公司编辑" forModel="demo_Company" type="Form">
    <Form model="demo_Company" dataCondition="id = ?" dataParams="[pageContext.record.id]">
        <Fields>
            <Field name="name" label="公司名称"/>
            <Field name="shortName" label="公司简称"/>
            <Field name="abbreviation" label="公司缩写"/>
            <Field name="parent" label="上级公司"/>
            <Field name="address" label="地址"/>
            <Field name="remark" label="公司详情"/>
            <Field name="status" label="状态"/>
        </Fields>
        <Actions>
        <Action type="Submit" :show="!this.data.id" logicFunction="demo_CreateCompanyBuiltInFunc" after="GoBack" layout="Footer"/>
        <Action type="Submit" :show="!!this.data.id" logicFunction="demo_UpdateCompanyBuiltInFunc" after="GoBack" layout="Footer"/>
    </Actions>
    </Form>
</View>