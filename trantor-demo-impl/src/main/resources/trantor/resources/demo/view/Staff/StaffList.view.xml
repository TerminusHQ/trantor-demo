<View type="List" forModel="demo_Staff" title="员工列表">
    <Table model="demo_Staff" dataCondition="">
        <Search>
            <Fields>
                <Field name="staffName" label="员工名称"/>
                <Field name="staffNumber" label="员工编号"/>
                <Field name="department" label="部门类型"/>
                <Field name="company" label="所属公司"/>
            </Fields>
        </Search>
        <Fields>
            <Field name="staffName" label="员工名称"/>
            <Field name="staffNumber" label="员工编号"/>
            <Field name="position" label="岗位"/>
            <Field name="department" label="部门"/>
            <Field name="company" label="所属公司"/>
            <Field name="mobile" label="手机号"/>
            <Field name="email" label="邮箱"/>
            <Field name="equipments" label="办公设备"/>
        </Fields>
        <RecordActions label="操作">
            <Action label="详情" targetView="demo_Staff_StaffDetails"/>
            <Action label="编辑" targetView="demo_Staff_StaffEdit"/>
            <Action type="Delete" label="删除" after="Refresh"
                    logicFlow="demo_DelStaffFlow" confirm="确定删除吗？" />
        </RecordActions>
        <Actions>
            <Action label="新建员工" targetView="demo_Staff_StaffCreate"/>
        </Actions>
    </Table>
</View>
