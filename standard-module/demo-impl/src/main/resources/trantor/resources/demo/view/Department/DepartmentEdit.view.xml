<View title="部门编辑" forModel="demo_Department" type="Form">
    <Form model="demo_Department" dataCondition="id = ?" dataParams="[pageContext.record.id]">
        <Fields>
            <Field name="name" label="部门名称"/>
            <Field name="parent" label="上级部门"/>
            <Field name="company" label="所属公司"/>
            <Field name="manager" label="主管"/>
            <Field name="remark" label="部门详情"/>
        </Fields>
        <Actions>
        <Action type="Submit" :show="!this.data.id" logicFunction="demo_CreateDepartmentBuiltInFunc" after="GoBack" layout="Footer"/>
        <Action type="Submit" :show="!!this.data.id" logicFunction="demo_UpdateDepartmentBuiltInFunc" after="GoBack" layout="Footer"/>
    </Actions>
    </Form>
</View>