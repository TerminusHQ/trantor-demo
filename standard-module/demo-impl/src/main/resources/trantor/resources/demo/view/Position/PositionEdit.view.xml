<View title="员工编辑" forModel="demo_Position" type="Form">
    <Form model="demo_Position" dataCondition="id = ?" dataParams="[pageContext.record.id]">
        <Fields>
            <Field name="name" label="岗位名称"/>
            <Field name="type" label="岗位类型"/>
            <Field name="remark" label="岗位详情"/>
            <Field name="status" label="状态"/>
        </Fields>
        <Actions>
        <Action type="Submit" :show="!this.data.id" logicFunction="demo_CreatePositionBuiltInFunc" after="GoBack" layout="Footer"/>
        <Action type="Submit" :show="!!this.data.id" logicFunction="demo_UpdatePositionBuiltInFunc" after="GoBack" layout="Footer"/>
    </Actions>
    </Form>
</View>