<View type="Form" forModel="erp_Staff" title="员工创建">
    <Form model="erp_Staff" key="staffContainer">
        <Fields>
            <Field name="staffName" label="员工名称"/>
            <Field name="company" label="所属公司"/>
            <Field name="departments" label="部门"/>
            <Field name="positionType" label="岗位类型"/>
            <Field name="mobile" label="手机号"/>
            <Field name="email" label="邮箱"/>
            <Field name="birthday" label="出生日期"/>
            <Field name="age" label="年龄"/>
            <Field name="liveAddress" label="住址"/>
            <Field name="salary" label="薪资"/>
            <Field name="equipment" label="办公设备" :show="this.data.company != null">
                <RenderType>
                    <ModelSelect dataCondition="status = 'free' and company.id = ?" dataParams="[#staffContainer.data.company.id]"/>
                </RenderType>
            </Field>
        </Fields>
        <Actions>
            <Action type="Submit" label="提交" after="GoBack"
                    logicFlow="erp_StaffCreateFlow"/>
        </Actions>
    </Form>
</View>

