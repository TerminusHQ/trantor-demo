<?xml version="1.0" encoding="UTF-8"?>
<View menuView="true" type="List" forModel="erp_Company" title="公司列表" version="2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://terminus-trantor.oss-cn-hangzhou.aliyuncs.com/xsi/0.17.x/base.xsd">
    <Table model="erp_Company" dataCondition="">
        <Search>
            <Fields>
                <Field name="name" label="公司名称"/>
                <Field name="shortName" label="公司简称"/>
                <Field name="status" label="状态"/>
            </Fields>
        </Search>
        <Fields>
            <Field name="name" label="公司名称"/>
            <Field name="code" label="公司编码"/>
            <Field name="shortName" label="公司简称"/>
            <Field name="abbreviation" label="公司缩写"/>
            <Field name="address" label="地址"/>
            <Field name="remark" label="公司详情"/>
            <Field name="status" label="状态"/>
        </Fields>
        <RecordActions label="操作">
            <Action label="详情" targetView="erp_Company_CompanyDetails"/>
