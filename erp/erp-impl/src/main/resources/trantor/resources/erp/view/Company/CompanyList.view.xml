            <Action type="Delete" label="删除" after="Refresh"  logicFunction="erp_DeleteCompanyBuiltInFunc" confirm="确定删除吗？"/>
        </RecordActions>
        <Actions>
            <Action label="新建公司" targetView="erp_Company_CompanyCreate"/>
        </Actions>
    </Table>
</View>