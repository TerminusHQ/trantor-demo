<?xml version="1.0" encoding="UTF-8"?>
<View title="员工编辑" forModel="erp_Staff" type="Form" version="2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://terminus-trantor.oss-cn-hangzhou.aliyuncs.com/xsi/0.17.x/base.xsd">
    <Form model="erp_Staff" dataCondition="id = ?" dataParams="[pageContext.record.id]" key="staffContainer">
        <Fields>
            <Field name="staffName" label="员工名称"/>
            <Field name="positionType" label="岗位类型"/>
            <Field name="departments" label="部门" show="#{this.data.company != null}">
                <RenderType>
                    <ModelSelect dataCondition="company.id = ?" dataParams="[#staffContainer.data.company.id]"/>
                </RenderType>
            </Field>
            <Field name="company" label="所属公司"/>
            <Field name="mobile" label="手机号"/>
            <Field name="email" label="邮箱"/>
            <Field name="equipment" label="办公设备"/>
            <Field name="birthday" label="出生日期"/>
            <Field name="liveAddress" label="住址"/>
            <Field name="salary" label="薪资"/>
        </Fields>
        <Actions>
            <Action type="Submit" show="#{!!this.data.id}" logicFlow="erp_StaffUpdateFlow" after="GoBack" layout="Footer"/>
        </Actions>
    </Form>
</View>